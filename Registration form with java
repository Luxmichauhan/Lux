import java.util.Scanner;

public class registrationform {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Welcome to the registration form\n");

        // Input fields
        System.out.print("Name: ");
        String name = scanner.nextLine();

        System.out.print("Mobile: ");
        String mobile = scanner.nextLine();

        System.out.print("Address: ");
        String address = scanner.nextLine();

        System.out.print("City: ");
        String city = scanner.nextLine();

        System.out.print("State: ");
        String state = scanner.nextLine();

        System.out.print("Gender (female/male): ");
        String gender = scanner.nextLine();

        System.out.print("Nationality: ");
        String nationality = scanner.nextLine();

        System.out.print("University: ");
        String university = scanner.nextLine();

        System.out.print("Schooling: ");
        String schooling = scanner.nextLine();

        System.out.print("Interested Subjects (math/english/science): ");
        String subjects = scanner.nextLine();

        System.out.print("Company: ");
        String company = scanner.nextLine();

        System.out.print("Session (morning/evening): ");
        String session = scanner.nextLine();

        System.out.print("Qualification: ");
        String qualification = scanner.nextLine();

        System.out.print("Grade: ");
        String grade = scanner.nextLine();

        System.out.print("Marks: ");
        String marks = scanner.nextLine();

        System.out.print("Percentage: ");
        String percentage = scanner.nextLine();

        System.out.print("Batch (2024,2023,2022): ");
        String batch = scanner.nextLine();

        System.out.print("Email: ");
        String email = scanner.nextLine();

        System.out.println("\nThank you for filling the form!");

        // Confirmation
        System.out.print("Do you want to submit the form? (yes/no): ");
        String choice = scanner.nextLine();

        if (choice.equalsIgnoreCase("yes")) {
            System.out.println("Form submitted successfully.");
            // Process the form data here (e.g., save to a database)
        } else {
            System.out.println("Form submission cancelled.");
        }

        scanner.close();
    }
}
